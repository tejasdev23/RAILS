<h1>
    Searching for - <%= @search_term %>
 
</h1>
<% if @courses.nil? %>


<h1>No Course found</h1>


<% else %>


<table border="1">
<thead>
    <tr>
    <th>Image</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
        
    <% @courses.each do |course|  %>
        <tr class=<%= cycle('even','odd')%> >
       
            <td><%=image_tag(course["smallIcon"]) %></td>
        <td><%=course["name"] %></td>
        <td><%=course["shortDescription"] %></td>
        
        
        </tr>
    
        <% end %>
    
    
    
    </tbody>
</table>
<% end %>